    <script type="text/javascript">
    $(document).ready(function () {
        $('#txtUserName').focus();
        $("#btnSave").click(function () {            
            var user = new Object();
            user.UserName = $('#txtUserName').val();
            user.Password = $('#txtPassword').val();            
            $.ajax({
                url: 'http://localhost:5266/api/user/IsAuthorized',
                type: 'POST',
                dataType: 'json',
                data: user,
                statusCode: {
                    202: function () {                                              
                        var url = '@Url.Action("Index","Map")';
                        window.location.href = url;
                    },
                    404: function () {
                        $('label[for=Name]').html("Enter UserName and Password.");
                    },
                    401: function () {
                        $('label[for=Name]').html("Enter Valid UserName and Password.");
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    //console.log("jqXHR= " + jqXHR.responseText + ", status code= " + jqXHR.statusCode + ", errorThrown= " + errorThrown);                        
                    console.log(jqXHR.responseText);
                }
            });
        });
    });
