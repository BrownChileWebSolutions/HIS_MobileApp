<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @System.Web.Optimization.Styles.Render("~/Content/css")
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <!--<link href="css/bootstrap-theme.min.css" rel="stylesheet" type="text/css" media="all">-->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrap">
        <header>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 mrg-top40">
                        <img src="images/dilogo-main.jpg" class="img-responsive col-centered">
                    </div>
                </div>
            </div>
        </header>

        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-offset-3 mrg-top40">
                        <div class="well">
                            <div class="form-signin">
                                <h2 class="form-signin-heading">Please sign in</h2>
                                <label for="Name" style="color: red; font-size: 16px;"></label>
                                <input id="txtUserName" type="text" class="form-control" placeholder="UserName" autofocus>
                                <input id="txtPassword" type="password" class="form-control" placeholder="Password">
                                <button id="btnSave" class="btn btn-lg btn-success btn-block" type="submit">Sign in</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <footer>
        <div id="footer">
            <div class="container">
                <p class="text-muted credit copy-txt">© Copyrights Survey System. All Rights Reserved.
                </p>
            </div>
        </div>
    </footer>
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/home_index.js"></script>
</body>
</html>

